{
  "name": "mtcdefi-core",
  "version": "1.0.0",
  "description": "MtcDeFi core smart contracts",
  "main": "truffle-config.js",
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "@openzeppelin/contracts": "3.2.0",
    "@truffle/hdwallet-provider": "^1.1.1",
    "axios": "^0.21.1",
    "dotenv": "^8.2.0",
    "ganache-cli": "^6.12.0",
    "truffle": "^5.1.49",
    "truffle-flattener": "^1.5.0",
    "truffle-plugin-verify": "^0.5.11",
    "web3": "^1.3.0"
  },
  "scripts": {
    "build": "truffle compile",
    "deploy": "truffle migrate",
    "deploy:testing": "truffle migrate --network testing",
    "deploy:mainnet": "truffle migrate --network mainnet",
    "deploy:ropsten": "truffle migrate --network ropsten",
    "deploy:rinkeby": "truffle migrate --network rinkeby",
    "deploy:kovan": "truffle migrate --network kovan",
    "deploy:goerli": "truffle migrate --network goerli",
    "source": "truffle-flattener contracts/GTokens.sol | sed '/^.*SPDX-License-Identifier:.*$/d' | sed '/^pragma experimental ABIEncoderV2;$/d' | sed '1s/^/\\/\\/ SPDX-License-Identifier: GPL-3.0-only\\npragma experimental ABIEncoderV2;\\n\\n/' > MtcDeFi.sol",
    "test": "truffle test",
    "stress-test": "npm run deploy && node stress-test/index.js"
  },
  "author": "David",
  "license": "GPL-3.0-only"
}
